<div class="container">
  	<div class="card o-hidden border-0 shadow-lg my-5">
    	<div class="card-body p-0">
			<%= form_with(model: @house, local: true, class: "container") do |form|%>
				
				<div class="form-group row">
					<%= form.label :images, "Select Pictures of the House" %>
					<%= form.file_field :images, multiple: true %>
				</div>
				<div class="form-group row">
					<%= form.label :owner %>
					<%= form.text_field :owner, placeholder: "Name of House Owner", class: "form-control", autofocus: true%>
				</div>
				<div class="form-group row">
					<%= form.label :address %>
					<%= form.text_field :address, placeholder: "Address of Asset", class: "form-control", autofocus: true%>
				</div>	
				<div class="form-group row">
					<%= form.label :rooms, "Number of Rooms" %>
					<%= form.number_field :rooms, placeholder: "Number of Rooms", class: "form-control", autofocus: true%>
				</div>	
				<div class="form-group row">
					<%= form.label :sqmt, "Square Meters" %>
					<%= form.number_field :sqmt, placeholder: "Square Meters", class: "form-control", autofocus: true%>
				</div>	
				<div class="form-group row">
					<%= form.label :floors %>
					<%= form.number_field :floors, placeholder: "Number of Floors", class: "form-control", autofocus: true%>
				</div>	
				<div class="form-group row">
					<%= form.label :air_cond, "Air Conditioners" %>
					<%= form.select :air_cond, [['None', false], ['Yes', true]], class: "form-control", autofocus: true%>
				</div>	
				<div class="form-group row">
					<%= form.label :price, "Price ($)" %>
					<%= form.number_field :price, step: 0.01, placeholder: "Price of the House", class: "form-control", autofocus: true%>
				</div>						
				<div class="form-group row actions text-center">
					<%= form.submit "Create New House Listing", class: "btn btn-success btn-user btn-block" %>
				</div>
			<% end %>
		</div>
	</div>
</div>
<!-- owner   | string
address | string
rooms   | int
sqmt    | int
floors   | int
air_cond| bool
price   | decimal -->