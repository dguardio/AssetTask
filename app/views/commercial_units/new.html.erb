<div class="container">
  	<div class="card o-hidden border-0 shadow-lg my-5">
    	<div class="card-body p-0">
			<%= form_with(model: @commercial_unit, local: true, class: "container") do |form|%>
				
				<div class="form-group row">
					<%= form.label :images, "Select Pictures of the House" %>
					<%= form.file_field :commercial_images, multiple: true %>
				</div>
				<div class="form-group row">
					<%= form.label :owner %>
					<%= form.text_field :owner, placeholder: "Name of Commercial Unit Owner", class: "form-control", autofocus: true%>
				</div>
				<div class="form-group row">
					<%= form.label :manager_email %>
					<%= form.text_field :manager_email, placeholder: "Your Email as Property Manager", class: "form-control", autofocus: true%>
				</div>				
				<div class="form-group row">
					<%= form.label :address %>
					<%= form.text_field :address, placeholder: "Address of Asset", class: "form-control", autofocus: true%>
				</div>	
				<div class="form-group row">
					<%= form.label :shops, "Number of Shops" %>
					<%= form.number_field :shops, placeholder: "Number of Shops", class: "form-control", autofocus: true%>
				</div>	
				<div class="form-group row">
					<%= form.label :sqmt, "Square Meters" %>
					<%= form.number_field :sqmt, placeholder: "Square Meters", class: "form-control", autofocus: true%>
				</div>	
				<div class="form-group row">
					<%= form.label :parking, "Parking Space" %>
					<%= form.select :parking, [['None', false], ['Yes', true]], class: "form-control", autofocus: true%>
				</div>	
				<div class="form-group row">
					<%= form.label :price, "Price ($)" %>
					<%= form.number_field :price, step: 0.01, placeholder: "Price of the Commercial Unit", class: "form-control", autofocus: true%>
				</div>						
				<div class="form-group row actions text-center">
					<%= form.submit "Create New Commercial Unit Listing", class: "btn btn-success btn-user btn-block" %>
				</div>
			<% end %>
		</div>
	</div>
</div>

<!-- owner   | string
address | string
shops   | int
sqmt    | int
parking | int 
price   | decimal -->